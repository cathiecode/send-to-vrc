{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Send to VRC",
  "version": "../package.json",
  "identifier": "com.superneko.send-to-vrc",
  "build": {
    "beforeDevCommand": "npm run dev:frontend",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Send to VRC",
        "width": 540,
        "height": 720,
        "label": "main",
        "backgroundColor": "#eeeeee",
        "url": "/launch.html"
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      },
      "csp": "default-src: 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost; style-src 'self' 'unsafe-inline'"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": ["resources/**/*", "licenses/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "./windows/hooks.nsh"
      }
    }
  }
}
